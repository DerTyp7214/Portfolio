---
import ThemeSwitcher from '../components/ThemeSwitch.svelte'
import RandomColor from '../components/RandomColor.astro'
import Logo from "../components/Logo.astro";
const {frontmatter} = Astro.props
---

<!doctype html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Astro description"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <meta property="og:url" content={Astro.site}/>
    <meta property="og:title" content={frontmatter.title}/>
    <title>{frontmatter.title}</title>
    <style>
        :root {
            --logo-color: #BF012D;
        }
    </style>
</head>
<body class="bg-gray-100 dark:bg-gray-900 transition-colors">
<div class="flex flex-col justify-center items-center p-8">
    <ThemeSwitcher client:only="svelte" class="absolute top-4 right-4"/>
    <RandomColor colorVar="--logo-color">
        <Logo size={150} borderRadius={50} color="var(--logo-color)"/>
    </RandomColor>
    <div class="prose dark:prose-invert items-start justify-start w-full max-w-2xl border-2 rounded-2xl p-4 border-black/20 dark:border-white/20 m-5">
        <slot/>
    </div>
</div>
</body>
</html>